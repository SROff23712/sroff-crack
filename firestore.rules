rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection 'files'
    match /files/{document=**} {
      // Tous les utilisateurs authentifiés peuvent lire les fichiers
      allow read: if request.auth != null;
      
      // Seul l'admin peut créer, modifier ou supprimer des fichiers
      allow write: if request.auth != null && 
                     (request.auth.token.email == 'sroff2371222@gmail.com' ||
                      request.auth.token.email == 'gp12levrai@gmail.com');
    }
  }
}

